{
  "name": "decentralized-chat",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "lodash": "^4.17.4",
    "moment": "^2.18.1",
    "prop-types": "^15.6.0",
    "react": "^16.0.0",
    "react-dom": "^16.0.0",
    "react-scroll": "^1.5.5",
    "react-time": "^4.3.0",
    "simple-peer": "^8.1.1",
    "socket.io": "^2.0.3",
    "socket.io-client": "^2.0.3"
  },
  "devDependencies": {
    "create-react-app-stylus": "^1.1.1",
    "eslint-config-xo-react": "^0.13.0",
    "eslint-plugin-react": "^7.4.0",
    "react-scripts": "1.0.14",
    "xo": "^0.18.2"
  },
  "scripts": {
    "start": "react-scripts-with-stylus start public/main.styl",
    "build": "react-scripts-with-stylus build public/main.styl",
    "test": "react-scripts test --env=jsdom",
    "eject": "react-scripts eject",
    "server": "node server/server.js"
  },
  "xo": {
    "extends": "xo-react",
    "parser": "babel-eslint",
    "esnext": true,
    "envs": [
      "browser",
      "node"
    ],
    "rules": {
      "no-return-assign": "off",
      "react/jsx-no-bind": "off",
      "unicorn/filename-case": [
        "off",
        {
          "case": "pascalCase"
        }
      ]
    }
  }
}
